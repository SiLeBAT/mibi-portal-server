          },
          "topic_adv": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          },
          "matrix_adv": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          },
          "matrix_text": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          },
          "process_state_adv": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          },
          "sampling_reason_adv": {
