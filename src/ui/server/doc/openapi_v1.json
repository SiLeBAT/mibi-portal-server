          },
          "operations_mode_text": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          },
          "vvvo": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          },
          "comment": {
            "$ref": "#/components/schemas/SamplePropertyEntry"
          }
        }
      },
      "SamplePropertyEntry": {
        "type": "object",
        "required": [
          "value"
        ],
        "properties": {
          "value": {
            "type": "string"
          }
        }
      },
      "EditedOrderContainer": {
        "type": "object",
        "required": [
          "order"
        ],
        "properties": {
          "order": {
            "$ref": "#/components/schemas/EditedOrder"
          }
        }
      },
      "EditedOrder": {
        "required": [
          "samples",
          "meta"
        ],
        "type": "object",
        "properties": {
          "samples": {
            "$ref": "#/components/schemas/EditedSampleList"
